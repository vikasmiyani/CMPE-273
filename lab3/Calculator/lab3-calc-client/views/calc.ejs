<!DOCTYPE html>
<html>
<head>
    <title>Calculator</title>
    <link rel="stylesheet"  href="/stylesheets/style.css">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.css">
   <!--   <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script> -->
</head>
<body ng-app="demo" ng-controller="calcController">
<fieldset>
      <legend>Calculator</legend>
<form class="form-horizontal" role="form">
<div class="form-group">
        <label class="col-sm-1 control-label">Field 1:</label>
       	 <div class="col-xs-3">
            <input type="number" class="form-control"  id="field_1" ng-model="field_1" name="field_1" />
       	 </div>
		<label class="col-sm-1 control-label">Field 2:</label>
        <div class="col-xs-3">
            <input type="number" class="form-control"  id="field_2" ng-model="field_2" name="field_2" />
        </div>
 </div>

<div class="form-group">
	<label class="col-sm-1 control-label">Result</label>
	<div class="col-xs-3">
		<input id="focusedInput" class="form-control" ng-model="result"  name="result" placeholder="Result">
	</div>
</div>

<button type="button" class="btn btn-primary" ng-click="addition()">Addition</button>
<button type="button" class="btn btn-primary" ng-click="subtraction()">Subtraction</button>
<button type="button" class="btn btn-primary" ng-click="multiplication()">Multiplication</button>
<button type="button" class="btn btn-primary" ng-click="division()">Division</button>
</fieldset>
</form>
<script src="/angular/angular.js"></script>
<script src="/angular-route/angular-route.js"></script>
<script src="/jquery/dist/jquery.min.js"></script>
<script src="/bootstrap/dist/js/bootstrap.js"></script>    
<script src="/controller/calc-controller.js"></script>   
</body>
</html>